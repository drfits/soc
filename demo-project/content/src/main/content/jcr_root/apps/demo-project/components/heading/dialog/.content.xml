<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"

          jcr:primaryType="soc:Dialog"
          sling:resourceSuperType="soc/foundation/dialog"
          saveReload="page"
          jcr:title="Page heading text"
          btnSave="Save"
          btnCancel="Cancel">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="soc/foundation/dialog/fields/container">
        <heading jcr:primaryType="nt:unstructured"
                 sling:resourceType="soc/foundation/dialog/fields/input"
                 label="Heading text"
                 name="./heading"/>
        <secondary jcr:primaryType="nt:unstructured"
                   sling:resourceType="soc/foundation/dialog/fields/input"
                   label="Secondary text"
                   name="./secondary"/>
    </content>
</jcr:root>
